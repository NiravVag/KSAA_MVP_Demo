@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#frmLocationCodeEdit').validator().on('submit', function (e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {

                    var obj = {
                        Id: @Model.Id,
                        Location_Code: $("#Location_Code").val(),
                        Address: $("#Address").val(),
                        Location: $("#Location").val(),
                        GSTRegistrationNo: $("#GSTRegistrationNo").val(),
                        TypeOfServicesProvided: $("#TypeOfServicesProvided").val(),
                        TypeOfUnit: $("#TypeOfUnit").val(),
                        ProductsManufactured: $("#ProductsManufactured").val(),
                        ProductsTraded: $("#ProductsTraded").val()
                    };

                    e.preventDefault();
                    $.ajax({
                        url: '/Location/LocationEdit',
                        method: 'POST',
                        data: obj,
                        success: function (data) {
                            $.toast({
                                text: "Location Update SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,

                            })
                            setTimeout(function () {
                                window.location.href = "/Location/LocationList"
                            }, 1500);
                        }
                    });
                }
            });
        });

    </script>
}