                                                                    asp-items="@(new SelectList(@ViewBag.Roles,"Id","Name"))" id="RoleId"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <div class="form-actions mt-10">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button type="submit" class="btn btn-success  mr-10">Submit</button>
                                                            @*<button type="button" id="btncancel" class="btn btn-default">cancel</button>*@
                                                            <a href="~/User/UserList" class="btn btn-default" id="btnCancel">Cancel</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
@section scripts{

    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendors/bower_components/bootstrap-validator/dist/validator.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmUserAdd').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        FirstName: $("#FirstName").val(),
                        Email: $("#Email").val(),
                        LastName: $("#LastName").val(),
                        Password: $("#Password").val(),
                        UserType: $("#UserType").val(),
                        Company: $("#Company").val(),
                        RoleId: $("#RoleId").val()
                    };
                    e.preventDefault();
                    $.ajax({
                        url: '/User/UserAdd',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $.toast({
                                text: "User Add SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function() {
                                window.location.href = "/User/UserList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                            //setTimeout(function () {

                            //}, 1500);
                        }
                    });
                }
            });
        });
    </script>

