                                                        </div>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                            @*}*@

                                        </div>

                                        <!-- /Row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <select class="selectpicker" id="Company" asp-for="Company" data-style="form-control btn-default btn-outline">
                                                                <option value=""> ----- Select Company ----- </option>
                                                                <option value="1">Mustard</option>
                                                                <option value="2">Ketchup</option>
                                                                <option value="3">Relish</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <select class="selectpicker" id="RoleId" asp-for="RoleId" data-style="form-control btn-default btn-outline">
                                                                <option value=""> ----- Select User Role ----- </option>
                                                                <option value="1">Super Administrator</option>
                                                                <option value="2">Client Administrator</option>
                                                                <option value="3">Client Employee</option>
                                                                <option value="4">Consultant</option>
                                                                <option value="5">Executive</option>
                                                                <option value="6">Administrator</option>
                                                                <option value="7">Client Executive</option>
                                                                <option value="8">Viewer</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <div class="form-actions mt-10">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button type="submit" class="btn btn-success  mr-10">Submit</button>
                                                            @*<button type="button" id="btncancel" class="btn btn-default">cancel</button>*@
                                                            <a href="~/User/UserList" class="btn btn-default" id="btnCancel">Cancel</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
