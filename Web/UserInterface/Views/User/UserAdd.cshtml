                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <div class="input-group-addon"><i class="ti-lock"></i></div>
                                                            <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#Password" data-match-error="Whoops, these don't match" placeholder="Enter Confirm Password" required>
