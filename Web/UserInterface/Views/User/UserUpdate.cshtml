@model KSAA.User.Application.DTOs.User.UserViewModel

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div>
            <div class="panel-heading">
                <div class="clearfix">
                    <a href="~/User/UserList" class="btn btn-primary btn-outline fancy-button btn-0" style="color: black; float: right;">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account mr-10"></i>Update User Form Details</h6>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-wrap">
                                <form class="form-horizontal" data-toggle="validator" method="post" asp-action="UpdateUser" id="frmUserUpdate" name="frmUserUpdate">
                                    <input type="hidden" id="hdnId" asp-for="Id" />
                                    <input type="hidden" id="hdnIsActive" asp-for="IsActive" />
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <div class="input-group-addon"><i class="ti-user"></i></div>
                                                            <input type="text" class="form-control" asp-for="FirstName" id="FirstName" placeholder="Enter First Name" data-required-error="First Name is required" required>
                                                        </div>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <div class="input-group-addon"><i class="ti-email"></i></div>
                                                            <input type="text" class="form-control" asp-for="Email" id="Email" placeholder="Enter Email" data-required-error="Email is required" required>
                                                        </div>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!-- /Row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <div class="input-group-addon"><i class="ti-user"></i></div>
                                                            <input type="text" class="form-control" asp-for="LastName" id="LastName" placeholder="Enter Last Name" data-required-error="Last Name is required" required>
                                                        </div>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <select asp-for="RoleId" class="selectpicker" data-style="form-control btn-default btn-outline"
                                                                    asp-items="@(new SelectList(@ViewBag.Roles,"Id","Name"))" id="RoleId"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>

                                        <!-- /Row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <select class="selectpicker" id="UserType" asp-for="UserType" data-style="form-control btn-default btn-outline">
                                                                <option value=""> ----- Select User Type ----- </option>
                                                                <option value="1">Internal</option>
                                                                <option value="2">Customer</option>
                                                                <option value="3">Consultant</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- /Row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="control-label col-md-3"></div>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <select asp-for="Company" class="selectpicker" data-style="form-control btn-default btn-outline"
                                                                    asp-items="@(new SelectList(@ViewBag.Companys,"Id","Company_Name"))" id="Company"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <div class="form-actions mt-10">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button type="submit" class="btn btn-success  mr-10">Submit</button>
                                                            @*<button type="button" class="btn btn-default">Cancel</button>*@
                                                            <a href="~/User/UserList" class="btn btn-default" id="btnCancel">Cancel</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
@section scripts{
   <!-- Bootstrap Core JavaScript -->
    <script src="~/vendors/bower_components/bootstrap-validator/dist/validator.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmUserUpdate').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        Id: $("#hdnId").val(),
                        IsActive: $("#hdnIsActive").val(),
                        FirstName: $("#FirstName").val(),
                        Email: $("#Email").val(),
                        LastName: $("#LastName").val(),
                        Password: $("#Password").val(),
                        UserType: $("#UserType").val(),
                        Company: $("#Company").val(),
                        RoleId: $("#RoleId").val()
                    };
                    e.preventDefault();
                    $.ajax({
                        url: '/User/UpdateUser',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $.toast({
                                text: data.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function() {
                                window.location.href = "/User/UserList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                        }
                    });
                }
            });
        });

        $('body').on("click", "#btnCancel", function(event) {
            close();
        });

                
    </script>
}