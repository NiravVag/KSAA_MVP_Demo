@model IEnumerable<KSAA.Master.Application.DTOs.Master.PlantCodeViewModel>

<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div>
            <div class="panel-heading">
                <div class="clearfix">
                    <a href="~/PlantCode/PlantCodeAdd" class="btn btn-primary btn-outline fancy-button btn-0" style="color: black; float: right;">Add Plant Code</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <h6 class="txt-dark capitalize-font">List of Plant Code</h6>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <div class="panel-heading">
                                    <div class="pull-left"></div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="panel-wrapper collapse in">
                                    <div class="panel-body">
                                        <div class="table-wrap">
                                            <div class="table-responsive">
                                                <table id="datable_1" class="table table-hover display pb-30">
                                                    <thead>
                                                        <tr>
                                                            <th>Location</th>
                                                            <th>Address</th>
                                                            <th>Plant_Code</th>
                                                            <th>GSTRegistrationNo</th>
                                                            <th>TypeOfUnit</th>
                                                            <th>ProductsManufactured</th>
                                                            <th>ProductsTraded</th>
                                                            <th>ServicesProvided</th>
                                                            <th>RegistrationType</th>
                                                            <th>IP</th>
                                                            <th>BrowserCase</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Location)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Address)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Plant_Code)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.GSTRegistrationNo)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.TypeOfUnit)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ProductsManufactured)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ProductsTraded)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ServicesProvided)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.RegistrationType)
                                                                </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IP)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BrowserCase)
                                                            </td>
                                                            <td class="text-nowrap">
                                                                <a asp-route-id="@item.Id" asp-controller="PlantCode" asp-action="GetPlantCode" class="mr-25" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                                                <a asp-route-id="@item.Id" asp-controller="PlantCode" asp-action="DeletePlantCodes" data-toggle="tooltip" data-original-title="Close"> <i class="fa fa-close text-danger"></i> </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                    <tbody>
                                                    </tbody>

                                                    <tfoot>
                                                        <tr>
                                                            <th>Location</th>
                                                            <th>Address</th>
                                                            <th>Plant_Code</th>
                                                            <th>GSTRegistrationNo</th>
                                                            <th>TypeOfUnit</th>
                                                            <th>ProductsManufactured</th>
                                                            <th>ProductsTraded</th>
                                                            <th>ServicesProvided</th>
                                                            <th>RegistrationType</th>
                                                            <th>IP</th>
                                                            <th>BrowserCase</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->