@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#frmTBTaggingEdit').validator().on('submit', function (e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {

                    var obj = {
                        Id : @Model.Id,
                        TBTaggingCode: $("#TBTaggingCode").val(),
                        GLCode: $("#GLCode").val(),
                        GLName: $("#GLName").val(),
                        Amount: $("#Amount").val(),
                        TagCode: $("#TagCode").val(),
                        Ip: $("#Ip").val(),
                        BrowserCase: $("#BrowserCase").val()
                    };

                    e.preventDefault();
                    $.ajax({
                        url: '/TBTagging/TBTaggingEdit',
                        method: 'POST',
                        data: obj,
                        success: function (data) {
                            $.toast({
                                text: "TBTagging Update SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,

                            })
                            setTimeout(function () {
                                window.location.href = "/TBTagging/TBTaggingList"
                            }, 1500);
                        }
                    });
                }
            });
        });

    </script>
