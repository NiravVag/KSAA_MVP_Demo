@section Scripts{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#frmTaxCodeAdd').validator().on('submit', function (e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        Tax_Code: $("#Tax_Code").val(),
                        SubtaxName: $("#SubtaxName").val(),
                        TaxRate: $("#TaxRate").val(),
                        Type: $("#Type").val(),
                        Ip: $("#Ip").val(),
                        BrowserCase: $("#BrowserCase").val()
                    };
                    e.preventDefault();
                    $.ajax({
                        url: '/TaxCode/TaxCodeAdd',
                        method: 'POST',
                        data: obj,
                        success: function (data) {
                            debugger;
                            $.toast({
                                text: "Tax Code Add SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function () {
                                window.location.href = "/TaxCode/TaxCodeList"
                            }, 1500);
                        }
                    });
                }
            });
        });

    </script>
    }